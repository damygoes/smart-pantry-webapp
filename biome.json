{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			"dist/**",
			"**/*.d.ts",
			"**/*.yml",
			"**/*.yaml",
			".storybook/**",
			"cypress/**",
			"public/**",
			"config/**",
			"styles/**",
			"**/*.spec.ts",
			"**/*.test.ts",
			"**/*.md",
			"**/*.config.ts",
			"**/*.config.js",
			"**/*.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
